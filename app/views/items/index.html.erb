<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Place type</th>
      <th>Property type</th>
      <th>Room number</th>
      <th>Bed number</th>
      <th>Guest number</th>
      <th>Country</th>
      <th>State</th>
      <th>City</th>
      <th>Zipcode</th>
      <th>Address</th>
      <th>Price per night</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.user.name %></td>
        <td><%= item.place_type %></td>
        <td><%= item.property_type %></td>
        <td><%= item.room_number %></td>
        <td><%= item.bed_number %></td>
        <td><%= item.guest_number %></td>
        <td><%= item.country %></td>
        <td><%= item.state %></td>
        <td><%= item.city %></td>
        <td><%= item.zipcode %></td>
        <td><%= item.address %></td>
        <td><%= item.price_per_night %></td>
        <td><%= item.description %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %> |
<%= link_to 'My Items', my_items_path %>
