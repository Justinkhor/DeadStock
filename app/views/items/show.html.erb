<br><br>
<% if @item.user_id != current_user.id %>
				<!-- Bid form -->
<%= render 'bids/form' %>
<% else %>
<h3>Bids:</h3>
<br>
<table>
  <tr>
    <th>User Name</th>
    <th>Check In</th>
    <th>Check Out</th>
    <th>Number Of Guests</th>
    <th>Total Price</th>
    <th>Paid?</th>
    <th></th>
  </tr>
  <% @item.bids.each do |bid| %>
  <tr>

  <td><%= bid.user.name %></td>
  <td><%= bid.check_in.strftime('%d %B %Y') %></td>
  <td><%= bid.check_out.strftime('%d %B %Y') %></td>
  <td><%= bid.num_of_guests %></td>
  <td><%= bid.total_price %></td>
  <td><%= bid.paid %></td>
  <td><%= link_to "Cancel Bid", bid, method: :delete %></td>
  </tr>
<% end %>
</table>
<% end %>

<br>

<% if @item.user_id == current_user.id %>
  <%= link_to 'Edit', edit_item_path(@item) %> |
  <%= link_to 'Back', root_path %>
<% else %>
  <%= link_to 'Back', root_path %>
<% end %>
