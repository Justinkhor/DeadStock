<h1>New Stock</h1>
<div class="container">
<%= form_for([@item, @stock]) do |f| %>

  <div class="field">
    <%= f.label :gender %>
    <%= f.select :gender, ['Male', 'Female'] %>
  </div>

  <div class="field">
    <%= f.label :size %>
    <%= f.select :size, ['6', '7', '8', '9', '10', '11', '12', '13', '14'] %>
  </div>

  <div class="field">
    <%= f.label :resell_price %>
    <%= f.number_field :resell_price %>
  </div>

  <div class="field">
    <%= f.label :closing_date %>
    <%= f.select :closing_date, ['1 Day', '3 Days', '5 Days', '10 Days', '20 Days', '30 Days'] %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
</div>
