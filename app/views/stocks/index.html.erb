<h1>Stocks</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Gender</th>
      <th>Size</th>
      <th>Resell Price</th>
      <th>Closing Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.user.username %></td>
        <td><%= stock.item.name %></td>
        <td><%= stock.gender %></td>
        <td><%= stock.size %></td>
        <td><%= stock.resell_price %></td>
        <td><%= stock.closing_date %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

