<h1>User Profile</h1>
<br>
<p>
  <strong>Name:</strong>
  <%= @user.first_name %> <%= @user.last_name %>
</p>

<p>
  <strong>Username:</strong>
  <%= @user.username%>
</p>


<%= link_to 'Edit', edit_user_path(@user) %>

<br><br>
<h3>Bids:</h3>
<br>
<table>
  <tr>
    <th>Item Name</th>
    <th>Bid Price</th>
    <th>Chosen Bid?</th>
    <th>Bought?</th>
  </tr>
<% @bids.each do |bid| %>
  <tr>
    <td><%= link_to bid.stock.item.name, bid.stock.item %></td>
    <td><%= bid.bidding_price %></td>
    <td><%= bid.chosen_bid %></td>
    <td><%= bid.bought %></td>
    <% end %>
  </tr>
</table>

<br>
