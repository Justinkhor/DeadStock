<h1>Bids</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Gender</th>
      <th>Size</th>
      <th>Resell Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.user.username %></td>
        <td><%= bid.item.name %></td>
        <td><%= bid.gender %></td>
        <td><%= bid.size %></td>
        <td><%= bid.resell_price %></td>
        <td><%= link_to 'Show', item_stock_path(stock.item_id, stock) %></td>
        <td><%= link_to 'Edit', edit_item_stock_path(stock.item_id, stock) %></td>
        <td><%= link_to 'Destroy', item_stock_path(stock.item_id, stock), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

